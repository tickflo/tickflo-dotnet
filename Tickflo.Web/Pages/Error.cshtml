@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="flex">
    @await Html.PartialAsync("_AppSidebar")
    <section class="p-6 flex-1">
        <div class="card bg-base-100 shadow-sm">
            <div class="card-body">
                <h1 class="card-title">Something went wrong</h1>
                <div role="alert" class="alert alert-error alert-soft mt-2">
                    <span>An error occurred while processing your request.</span>
                </div>

                @if (Model.ShowRequestId)
                {
                    <div class="mt-2 text-sm">
                        <span class="opacity-70">Request ID:</span>
                        <span class="badge badge-soft badge-primary">@Model.RequestId</span>
                    </div>
                }

                <div class="mt-4 prose max-w-none">
                    <h3>Development Mode</h3>
                    <p>
                        Swapping to the <strong>Development</strong> environment displays detailed information about the error that occurred.
                    </p>
                    <p>
                        <strong>The Development environment shouldn't be enabled for deployed applications.</strong>
                        It can result in displaying sensitive information from exceptions to end users. For local debugging,
                        enable the <strong>ASPNETCORE_ENVIRONMENT=Development</strong> environment variable and restart the app.
                    </p>
                </div>

                <div class="join mt-6">
                    <a class="btn btn-soft join-item" href="/">Back to Home</a>
                </div>
            </div>
        </div>
    </section>
 </div>
