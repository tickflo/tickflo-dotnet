@page
@model Tickflo.Web.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-page="/Users/Create">Create User</a>
    <span class="ms-2 text-success">@TempData["Message"]</span>
    <span class="ms-2 text-danger">@TempData["Error"]</span>
    </div>

<table class="table table-sm">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Admin</th>
            <th>Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var u in Model.Users)
    {
        <tr>
            <td>@u.Name</td>
            <td>@u.Email</td>
            <td>@(u.SystemAdmin ? "Yes" : "No")</td>
            <td>@u.CreatedAt.ToString("yyyy-MM-dd")</td>
            <td><a asp-page="/Users/Details" asp-route-id="@u.Id">Details</a></td>
        </tr>
    }
    </tbody>
 </table>
