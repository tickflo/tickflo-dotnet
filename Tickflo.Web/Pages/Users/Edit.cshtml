@page "{id:int}"
@model Tickflo.Web.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="flex flex-row gap-4">
    @await Html.PartialAsync("_AppSidebar")
    <section class="p-6 flex-1">
        <div class="flex items-center justify-between mb-4">
            <h1 class="text-2xl font-semibold">Edit User</h1>
        </div>

@if (Model.Input == null)
{
    <div class="alert alert-warning">User not found.</div>
}
else
{
        <form method="post" class="card bg-base-100 shadow-sm">
            <div class="card-body">
                <div class="grid md:grid-cols-2 gap-4">
                    <div class="form-control">
                        <label class="label"><span class="label-text">Name</span></label>
                        <input asp-for="Input.Name" class="input input-bordered w-full" />
                        <span asp-validation-for="Input.Name" class="validator-hint"></span>
                    </div>
                    <div class="form-control">
                        <label class="label"><span class="label-text">Email</span></label>
                        <input asp-for="Input.Email" class="input input-bordered w-full" />
                        <span asp-validation-for="Input.Email" class="validator-hint"></span>
                    </div>
                    <div class="form-control">
                        <label class="label"><span class="label-text">Recovery Email</span></label>
                        <input asp-for="Input.RecoveryEmail" class="input input-bordered w-full" />
                        <span asp-validation-for="Input.RecoveryEmail" class="validator-hint"></span>
                    </div>
                    <div class="form-control">
                        <label class="label cursor-pointer justify-start gap-3">
                            <input asp-for="Input.SystemAdmin" type="checkbox" class="checkbox" />
                            <span class="label-text">System Admin</span>
                        </label>
                    </div>
                </div>
                <div class="join mt-4">
                    <button type="submit" class="btn btn-primary join-item w-full md:w-auto">Update</button>
                    <a class="btn btn-ghost join-item" asp-page="/Users/Details" asp-route-id="@Model.UserId" asp-preserve-query>Cancel</a>
                </div>
            </div>
        </form>
}

    </section>
</div>

<partial name="_ValidationScriptsPartial" />
