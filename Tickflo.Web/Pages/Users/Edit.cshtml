@page "{id:int}"
@model Tickflo.Web.Pages.Users.EditModel
@{
    ViewData["Title"] = "Edit User";
}

<div class="flex flex-row gap-4">
    @await Html.PartialAsync("_AppSidebar")
    <section class="relative overflow-hidden p-6 flex-1 space-y-8 text-slate-100 rounded-3xl bg-gradient-to-br from-[#0c1220] via-[#0b101b] to-[#0a0f18]">
        <div class="flex items-center justify-between mb-4">
            <h1 class="text-2xl font-semibold text-slate-100">Edit User</h1>
        </div>

@if (Model.Input == null)
{
    <div class="alert alert-warning">User not found.</div>
}
else
{
        <form method="post" class="card bg-neutral-900/85 backdrop-blur shadow-2xl rounded-3xl text-slate-100">
            <div class="card-body">
                <div class="grid md:grid-cols-2 gap-4">
                    <div class="form-control">
                        <label class="label"><span class="label-text">Name</span></label>
                        <input asp-for="Input.Name" class="input input-bordered validator w-full" />
                        <span asp-validation-for="Input.Name" class="validator-hint text-xs text-error"></span>
                    </div>
                    <div class="form-control">
                        <label class="label"><span class="label-text">Email</span></label>
                        <input asp-for="Input.Email" class="input input-bordered validator w-full" />
                        <span asp-validation-for="Input.Email" class="validator-hint text-xs text-error"></span>
                    </div>
                    <div class="form-control">
                        <label class="label"><span class="label-text">Recovery Email</span></label>
                        <input asp-for="Input.RecoveryEmail" class="input input-bordered validator w-full" />
                        <span asp-validation-for="Input.RecoveryEmail" class="validator-hint text-xs text-error"></span>
                    </div>
                    <div class="form-control">
                        <label class="label cursor-pointer justify-start gap-3">
                            <input asp-for="Input.SystemAdmin" type="checkbox" class="toggle toggle-primary" />
                            <span class="label-text">System Admin</span>
                        </label>
                    </div>
                </div>
                <div class="join md:join">
                    <button type="submit" class="btn btn-primary join-item btn-sm w-full md:w-auto">Update</button>
                    <a class="btn btn-soft join-item btn-sm" asp-page="/Users/Details" asp-route-id="@Model.UserId" asp-preserve-query>Cancel</a>
                </div>
            </div>
        </form>
}

    </section>
</div>

<partial name="_ValidationScriptsPartial" />
