@page "/workspaces/{slug}/locations/{locationId:int}/edit"
@model Tickflo.Web.Pages.Workspaces.LocationsEditModel
@{
    ViewData["Title"] = Model.LocationId == 0 ? "New Location" : "Edit Location";
}
<div class="flex flex-row gap-4">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = (Model.LocationId == 0 ? "New Location" : "Edit Location"), AllowNewAction = Model.CanCreateLocations, NewActionLabel = "New Location", NewActionHref = $"/workspaces/{Model.WorkspaceSlug}/locations/0/edit" })
        <div class="card bg-base-100 shadow-sm mt-4 max-w-xl">
            <div class="card-body">
                <form method="post">
                    <div class="fieldset">
                        <label class="label" for="Name"><span class="label-text">Name</span></label>
                        <input class="input validator w-full" asp-for="Name" />
                        <span asp-validation-for="Name" class="validator-hint"></span>
                    </div>
                    <div class="fieldset">
                        <label class="label" for="Address"><span class="label-text">Address</span></label>
                        <input class="input validator w-full" asp-for="Address" />
                        <span asp-validation-for="Address" class="validator-hint"></span>
                    </div>
                    <div class="fieldset">
                        <label class="label cursor-pointer">
                            <span class="label-text">Active</span>
                            <input type="checkbox" class="toggle" asp-for="Active" />
                        </label>
                    </div>
                        <div class="card-actions flex flex-wrap gap-2 md:join mt-4">
                            @{ var saveLabel = (Model.LocationId == 0) ? "Create" : "Update"; }
                            <button type="submit" class="btn btn-soft btn-primary md:join-item w-full md:w-auto" @( (Model.LocationId == 0 ? Model.CanCreateLocations : Model.CanEditLocations) ? "" : "disabled")>@saveLabel</button>
                        <a class="btn btn-soft btn-ghost md:join-item" asp-page="/Workspaces/Locations" asp-route-slug="@Model.WorkspaceSlug" asp-preserve-query>Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
    </div>
