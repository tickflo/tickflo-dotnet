                                <tr class="hover">
                                    <td class="flex flex-wrap items-center gap-2">
                                        <input type="hidden" name="types[@t.Id].id" value="@t.Id" />
                                        <input name="types[@t.Id].name" value="@t.Name" class="input join-item input-sm w-48 bg-neutral-900/80 border border-white/10 text-slate-100" @(Model.CanEditSettings ? "" : "disabled") required />
                                        <input type="color" name="types[@t.Id].color" value="@pickerColor" class="join-item w-12 h-9 p-0 border border-white/20 rounded bg-neutral-900/70 cursor-pointer" @(Model.CanEditSettings ? "" : "disabled") />
                                        <input type="number" name="types[@t.Id].sortOrder" value="@t.SortOrder" class="input join-item input-sm w-20 bg-neutral-900/80 border border-white/10 text-slate-100" @(Model.CanEditSettings ? "" : "disabled") />
