@page "/workspaces/{slug}/settings"
@model Tickflo.Web.Pages.Workspaces.SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<div class="flex flex-row gap-4">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = "Settings" })
        <div class="card bg-base-100 shadow-sm">
            <div class="card-body">
                <h2 class="card-title">Settings</h2>
                <p class="text-sm text-base-content/70">Workspace: @Model.WorkspaceSlug</p>
            </div>
        </div>
        <div class="card bg-base-100 shadow-sm mt-4 max-w-xl">
            <div class="card-body">
                <form method="post">
                    <div class="fieldset">
                        <label class="label" for="Name"><span class="label-text">Workspace Name</span></label>
                        <input class="input validator w-full" asp-for="Workspace.Name" />
                        <span asp-validation-for="Workspace.Name" class="validator-hint"></span>
                    </div>
                    <div class="fieldset">
                        <label class="label" for="Slug"><span class="label-text">Slug</span></label>
                        <input class="input validator w-full" asp-for="Workspace.Slug" />
                        <span asp-validation-for="Workspace.Slug" class="validator-hint"></span>
                    </div>
                    <div class="card-actions flex flex-wrap gap-2 md:join">
                        <button type="submit" class="btn btn-soft btn-primary md:join-item w-full md:w-auto" @(Model.CanEditSettings ? "" : "disabled")>Save</button>
                        <a class="btn btn-ghost md:join-item" asp-page="/Workspace" asp-route-slug="@Model.WorkspaceSlug" asp-preserve-query>Cancel</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card bg-base-100 shadow-sm mt-6">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <h3 class="card-title">Ticket Statuses</h3>
                    <span class="text-sm opacity-70">Customize names and colors</span>
                </div>
                <div class="overflow-x-auto rounded-box">
                    <p class="text-sm opacity-70 mb-3">Priorities apply to both Tickets and Contacts. You can rename and recolor them; changes update filters and badges across the workspace.</p>
                    <table class="table table-zebra table-md">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Color</th>
                                <th>Order</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model.Statuses)
                            {
                                var displayColor = string.IsNullOrWhiteSpace(s.Color) ? "neutral" : s.Color;
                                var isHex = displayColor.StartsWith("#");
                                var badgeCls = isHex ? "badge badge-soft" : $"badge badge-soft badge-{displayColor}";
                                var badgeStyle = isHex ? $"background-color: {displayColor}; color: #fff;" : null;
                                <tr>
                                    <td>
                                        <form method="post" asp-page-handler="UpdateStatus" class="join">
                                            <input type="hidden" name="slug" value="@Model.WorkspaceSlug" />
                                            <input type="hidden" name="id" value="@s.Id" />
                                            <input name="name" value="@s.Name" class="input input-bordered join-item input-sm w-40" />
                                            <input type="color" name="color" value="@(isHex ? displayColor : "#3b82f6")" class="join-item w-12 h-8 p-0 border rounded" />
                                            <input type="number" name="sortOrder" value="@s.SortOrder" class="input input-bordered join-item input-sm w-20" />
                                            <label class="label cursor-pointer join-item ml-2">
                                                <input type="checkbox" name="isClosedState" value="true" @(s.IsClosedState ? "checked" : null) class="checkbox checkbox-xs" />
                                                <span class="label-text ml-1">Closed</span>
                                            </label>
                                            <button class="btn btn-soft btn-primary join-item btn-sm" type="submit" @(Model.CanEditSettings ? "" : "disabled")>Save</button>
                                        </form>
                                    </td>
                                    <td><span class="@badgeCls" style="@badgeStyle">@s.Color</span></td>
                                    <td>@s.SortOrder</td>
                                    <td>
                                        <form method="post" asp-page-handler="DeleteStatus" onsubmit="return confirm('Delete status @s.Name?');">
                                            <input type="hidden" name="slug" value="@Model.WorkspaceSlug" />
                                            <input type="hidden" name="id" value="@s.Id" />
                                            <button class="btn btn-soft btn-error btn-xs" type="submit" @(Model.CanEditSettings ? "" : "disabled")>Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td colspan="5">
                                    <form method="post" asp-page-handler="AddStatus" class="join">
                                        <input type="hidden" name="slug" value="@Model.WorkspaceSlug" />
                                        <input name="NewStatusName" placeholder="New status name" class="input input-bordered join-item input-sm w-40" />
                                        <input type="color" name="NewStatusColor" value="#3b82f6" class="join-item w-12 h-8 p-0 border rounded" />
                                        <button class="btn btn-soft btn-primary join-item btn-sm" type="submit" @(Model.CanCreateSettings ? "" : "disabled")>Add</button>
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card bg-base-100 shadow-sm mt-6">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <h3 class="card-title">Priorities</h3>
                    <span class="text-sm opacity-70">Used for tickets and contacts</span>
                </div>
                <div class="overflow-x-auto rounded-box">
                    <table class="table table-zebra table-md">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Color</th>
                                <th>Order</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.Priorities)
                            {
                                var displayColor = string.IsNullOrWhiteSpace(p.Color) ? "neutral" : p.Color;
                                var isHex = displayColor.StartsWith("#");
                                var badgeCls = isHex ? "badge badge-soft" : $"badge badge-soft badge-{displayColor}";
                                var badgeStyle = isHex ? $"background-color: {displayColor}; color: #fff;" : null;
                                <tr>
                                    <td>
                                        <form method="post" asp-page-handler="UpdatePriority" class="join">
                                            <input type="hidden" name="slug" value="@Model.WorkspaceSlug" />
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <input name="name" value="@p.Name" class="input input-bordered join-item input-sm w-40" />
                                            <input type="color" name="color" value="@(isHex ? displayColor : "#3b82f6")" class="join-item w-12 h-8 p-0 border rounded" />
                                            <input type="number" name="sortOrder" value="@p.SortOrder" class="input input-bordered join-item input-sm w-20" />
                                            <button class="btn btn-soft btn-primary join-item btn-sm" type="submit" @(Model.CanEditSettings ? "" : "disabled")>Save</button>
                                        </form>
                                    </td>
                                    <td><span class="@badgeCls" style="@badgeStyle">@p.Color</span></td>
                                    <td>@p.SortOrder</td>
                                    <td>
                                        <form method="post" asp-page-handler="DeletePriority" onsubmit="return confirm('Delete priority @p.Name?');">
                                            <input type="hidden" name="slug" value="@Model.WorkspaceSlug" />
                                            <input type="hidden" name="id" value="@p.Id" />
                                            <button class="btn btn-soft btn-error btn-xs" type="submit" @(Model.CanEditSettings ? "" : "disabled")>Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td colspan="5">
                                    <form method="post" asp-page-handler="AddPriority" class="join">
                                        <input type="hidden" name="slug" value="@Model.WorkspaceSlug" />
                                        <input name="NewPriorityName" placeholder="New priority name" class="input input-bordered join-item input-sm w-40" />
                                        <input type="color" name="NewPriorityColor" value="#f59e0b" class="join-item w-12 h-8 p-0 border rounded" />
                                        <button class="btn btn-soft btn-primary join-item btn-sm" type="submit" @(Model.CanCreateSettings ? "" : "disabled")>Add</button>
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card bg-base-100 shadow-sm mt-6">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <h3 class="card-title">Ticket Types</h3>
                    <span class="text-sm opacity-70">Categorize tickets with types</span>
                </div>
                <div class="overflow-x-auto rounded-box">
                    <table class="table table-zebra table-md">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Color</th>
                                <th>Order</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var t in Model.Types)
                            {
                                var displayColor = string.IsNullOrWhiteSpace(t.Color) ? "neutral" : t.Color;
                                var isHex = displayColor.StartsWith("#");
                                var badgeCls = isHex ? "badge badge-soft" : $"badge badge-soft badge-{displayColor}";
                                var badgeStyle = isHex ? $"background-color: {displayColor}; color: #fff;" : null;
                                <tr>
                                    <td>
                                        <form method="post" asp-page-handler="UpdateType" class="join">
                                            <input type="hidden" name="slug" value="@Model.WorkspaceSlug" />
                                            <input type="hidden" name="id" value="@t.Id" />
                                            <input name="name" value="@t.Name" class="input input-bordered join-item input-sm w-40" />
                                            <input type="color" name="color" value="@(isHex ? displayColor : "#14b8a6")" class="join-item w-12 h-8 p-0 border rounded" />
                                            <input type="number" name="sortOrder" value="@t.SortOrder" class="input input-bordered join-item input-sm w-20" />
                                            <button class="btn btn-soft btn-primary join-item btn-sm" type="submit" @(Model.CanEditSettings ? "" : "disabled")>Save</button>
                                        </form>
                                    </td>
                                    <td><span class="@badgeCls" style="@badgeStyle">@t.Color</span></td>
                                    <td>@t.SortOrder</td>
                                    <td>
                                        <form method="post" asp-page-handler="DeleteType" onsubmit="return confirm('Delete type @t.Name?');">
                                            <input type="hidden" name="slug" value="@Model.WorkspaceSlug" />
                                            <input type="hidden" name="id" value="@t.Id" />
                                            <button class="btn btn-soft btn-error btn-xs" type="submit" @(Model.CanEditSettings ? "" : "disabled")>Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td colspan="5">
                                    <form method="post" asp-page-handler="AddType" class="join">
                                        <input type="hidden" name="slug" value="@Model.WorkspaceSlug" />
                                        <input name="NewTypeName" placeholder="New type name" class="input input-bordered join-item input-sm w-40" />
                                        <input type="color" name="NewTypeColor" value="#14b8a6" class="join-item w-12 h-8 p-0 border rounded" />
                                        <button class="btn btn-soft btn-primary join-item btn-sm" type="submit" @(Model.CanCreateSettings ? "" : "disabled")>Add</button>
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="card bg-base-100 shadow-sm mt-6">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <h3 class="card-title">Notification Integrations</h3>
                    <span class="text-sm opacity-70">Configure delivery methods</span>
                </div>
                
                @if (TempData["NotificationSettingsSaved"] != null)
                {
                    <div class="alert alert-success mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                        <span>Notification settings saved successfully!</span>
                    </div>
                }
                
                <div class="alert alert-info mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="text-sm">
                        <p class="font-semibold">Pluggable Integrations</p>
                        <p>Notification delivery methods are optional integrations. Enable only what you need and configure your preferred providers.</p>
                    </div>
                </div>
                
                <form method="post" asp-page-handler="SaveNotificationSettings" class="space-y-6">
                    <input type="hidden" name="slug" value="@Model.WorkspaceSlug" />
                    
                    <div class="divider">General Settings</div>
                    
                    <div class="form-control">
                        <label class="label cursor-pointer justify-start gap-4">
                            <input type="checkbox" asp-for="NotificationsEnabled" class="toggle toggle-primary" />
                            <div>
                                <span class="label-text font-semibold">Enable Notifications</span>
                                <p class="text-xs opacity-70">Master switch for all notification types in this workspace</p>
                            </div>
                        </label>
                    </div>
                    
                    <div class="divider">Delivery Integrations</div>
                    
                    <!-- Email Integration -->
                    <div class="card bg-base-200 shadow-sm">
                        <div class="card-body">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <h4 class="font-semibold flex items-center gap-2">
                                        <span>ðŸ“§ Email Integration</span>
                                        <span class="badge badge-success badge-sm">Built-in</span>
                                    </h4>
                                    <p class="text-xs opacity-70 mt-1">Send notifications via email using SMTP</p>
                                </div>
                                <input type="checkbox" asp-for="EmailIntegrationEnabled" class="toggle toggle-primary" />
                            </div>
                            <div class="form-control mt-2">
                                <label class="label"><span class="label-text text-xs">Provider</span></label>
                                <select asp-for="EmailProvider" class="select select-bordered select-sm">
                                    <option value="smtp">SMTP (Built-in)</option>
                                    <option value="sendgrid">SendGrid (Plugin)</option>
                                    <option value="mailgun">Mailgun (Plugin)</option>
                                    <option value="ses">AWS SES (Plugin)</option>
                                </select>
                                <label class="label"><span class="label-text-alt opacity-70">Configure provider in appsettings.json</span></label>
                            </div>
                        </div>
                    </div>
                    
                    <!-- In-App Integration -->
                    <div class="card bg-base-200 shadow-sm">
                        <div class="card-body">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <h4 class="font-semibold flex items-center gap-2">
                                        <span>ðŸ”” In-App Notifications</span>
                                        <span class="badge badge-success badge-sm">Built-in</span>
                                    </h4>
                                    <p class="text-xs opacity-70 mt-1">Show notifications within the application interface</p>
                                </div>
                                <input type="checkbox" asp-for="InAppNotificationsEnabled" class="toggle toggle-primary" />
                            </div>
                            <p class="text-xs opacity-60 mt-2">No external provider needed - uses internal database storage</p>
                        </div>
                    </div>
                    
                    <!-- SMS Integration -->
                    <div class="card bg-base-200 shadow-sm">
                        <div class="card-body">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <h4 class="font-semibold flex items-center gap-2">
                                        <span>ðŸ’¬ SMS Integration</span>
                                        <span class="badge badge-warning badge-sm">Plugin Required</span>
                                    </h4>
                                    <p class="text-xs opacity-70 mt-1">Send urgent notifications via SMS text messages</p>
                                </div>
                                <input type="checkbox" asp-for="SmsIntegrationEnabled" class="toggle toggle-primary" />
                            </div>
                            <div class="form-control mt-2">
                                <label class="label"><span class="label-text text-xs">Provider</span></label>
                                <select asp-for="SmsProvider" class="select select-bordered select-sm">
                                    <option value="none">Not Configured</option>
                                    <option value="twilio">Twilio (Plugin)</option>
                                    <option value="sns">AWS SNS (Plugin)</option>
                                    <option value="messagebird">MessageBird (Plugin)</option>
                                    <option value="vonage">Vonage/Nexmo (Plugin)</option>
                                </select>
                                <label class="label"><span class="label-text-alt opacity-70">Install plugin package and configure credentials</span></label>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Push Integration -->
                    <div class="card bg-base-200 shadow-sm">
                        <div class="card-body">
                            <div class="flex items-start justify-between">
                                <div class="flex-1">
                                    <h4 class="font-semibold flex items-center gap-2">
                                        <span>ðŸ“± Push Notifications</span>
                                        <span class="badge badge-warning badge-sm">Plugin Required</span>
                                    </h4>
                                    <p class="text-xs opacity-70 mt-1">Send push notifications to mobile devices and browsers</p>
                                </div>
                                <input type="checkbox" asp-for="PushIntegrationEnabled" class="toggle toggle-primary" />
                            </div>
                            <div class="form-control mt-2">
                                <label class="label"><span class="label-text text-xs">Provider</span></label>
                                <select asp-for="PushProvider" class="select select-bordered select-sm">
                                    <option value="none">Not Configured</option>
                                    <option value="fcm">Firebase Cloud Messaging (Plugin)</option>
                                    <option value="apns">Apple Push Notification Service (Plugin)</option>
                                    <option value="onesignal">OneSignal (Plugin)</option>
                                    <option value="pusher">Pusher Beams (Plugin)</option>
                                </select>
                                <label class="label"><span class="label-text-alt opacity-70">Install plugin package and configure API keys</span></label>
                            </div>
                        </div>
                    </div>
                    
                    <div class="divider">Batch & Scheduling</div>
                    
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Batch Notification Delay (minutes)</span>
                            </label>
                            <input type="number" asp-for="BatchNotificationDelay" min="1" max="120" class="input input-bordered" />
                            <label class="label">
                                <span class="label-text-alt opacity-70">Group similar notifications within this time window</span>
                            </label>
                        </div>
                        
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Daily Summary Time (hour)</span>
                            </label>
                            <input type="number" asp-for="DailySummaryHour" min="0" max="23" class="input input-bordered" />
                            <label class="label">
                                <span class="label-text-alt opacity-70">Hour of day (0-23) to send daily ticket summaries</span>
                            </label>
                        </div>
                    </div>
                    
                    <div class="divider">Priority Rules</div>
                    
                    <div class="space-y-3">
                        <div class="form-control">
                            <label class="label cursor-pointer justify-start gap-4">
                                <input type="checkbox" asp-for="MentionNotificationsUrgent" class="checkbox checkbox-primary checkbox-sm" />
                                <div>
                                    <span class="label-text font-semibold">Mark Mentions as Urgent</span>
                                    <p class="text-xs opacity-70">When users are @@mentioned in comments, treat as urgent priority</p>
                                </div>
                            </label>
                        </div>
                        
                        <div class="form-control">
                            <label class="label cursor-pointer justify-start gap-4">
                                <input type="checkbox" asp-for="TicketAssignmentNotificationsHigh" class="checkbox checkbox-primary checkbox-sm" />
                                <div>
                                    <span class="label-text font-semibold">Mark Ticket Assignments as High Priority</span>
                                    <p class="text-xs opacity-70">Notify users immediately when tickets are assigned to them</p>
                                </div>
                            </label>
                        </div>
                    </div>
                    
                    <div class="alert">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                        </svg>
                        <div class="text-sm">
                            <p class="font-semibold">How to add integrations:</p>
                            <ul class="list-disc list-inside mt-1 space-y-1">
                                <li>Install integration NuGet packages (e.g., <code class="text-xs">Tickflo.Notifications.Twilio</code>)</li>
                                <li>Add provider credentials to appsettings.json or environment variables</li>
                                <li>Enable the integration and select your provider above</li>
                                <li>Users can control which notifications they receive in their profile</li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="card-actions">
                        <button type="submit" class="btn btn-primary" @(Model.CanEditSettings ? "" : "disabled")>Save Notification Settings</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
