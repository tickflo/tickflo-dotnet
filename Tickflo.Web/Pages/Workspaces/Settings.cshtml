                                        <input type="color" name="priorities[@p.Id].color" value="@pickerColor" class="join-item w-12 h-9 p-0 border border-white/20 rounded bg-neutral-900/70 cursor-pointer" @(Model.CanEditSettings ? "" : "disabled") />
