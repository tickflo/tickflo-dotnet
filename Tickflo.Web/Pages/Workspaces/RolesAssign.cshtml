@page "/workspaces/{slug}/users/roles/assign"
@model Tickflo.Web.Pages.Workspaces.RolesAssignModel
@{
    ViewData["Title"] = "Assign User Roles";
}

<div class="flex flex-row gap-4">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = "Assign Roles" })

        <div class="card bg-base-100 shadow-sm mt-4 max-w-3xl">
            <div class="card-body">
                <h2 class="card-title">Assign Roles</h2>
                <form method="post" asp-page-handler="Assign" class="grid gap-4 md:grid-cols-3 items-end">
                    <div class="form-control">
                        <label class="label"><span class="label-text">User</span></label>
                        <select asp-for="SelectedUserId" class="select select-bordered select-sm w-full">
                            <option value="">Select a user</option>
                            @foreach (var m in Model.Members)
                            {
                                <option value="@m.Id">@m.Name (@m.Email)</option>
                            }
                        </select>
                    </div>
                    <div class="form-control">
                        <label class="label"><span class="label-text">Role</span></label>
                        <select asp-for="SelectedRoleId" class="select select-bordered select-sm w-full">
                            <option value="">Select a role</option>
                            @foreach (var r in Model.Roles)
                            {
                                <option value="@r.Id">@r.Name</option>
                            }
                        </select>
                    </div>
                    <div class="join md:join">
                        <button type="submit" class="btn btn-primary btn-sm join-item w-full md:w-auto">Assign</button>
                        <a class="btn btn-ghost join-item" href="/workspaces/@Model.WorkspaceSlug/users/roles" asp-preserve-query>Back</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card bg-base-100 shadow-sm mt-8">
            <div class="card-body p-0">
                <div class="overflow-x-auto rounded-box bg-base-100">
                    <table class="table table-zebra table-md">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Roles</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.Members)
                            {
                                var roles = Model.UserRoles.ContainsKey(m.Id) ? Model.UserRoles[m.Id] : new List<Tickflo.Core.Entities.Role>();
                                <tr>
                                    <td>@m.Name (@m.Email)</td>
                                    <td>
                                        @if (roles.Any())
                                        {
                                            foreach (var r in roles)
                                            {
                                                <span class="inline-flex items-center mr-2">
                                                    <span class="badge badge-soft badge-secondary">@r.Name</span>
                                                    <form method="post" asp-page-handler="Remove" class="inline ml-2">
                                                        <input type="hidden" name="userId" value="@m.Id" />
                                                        <input type="hidden" name="roleId" value="@r.Id" />
                                                        <button type="submit" class="btn btn-error btn-xs">Remove</button>
                                                    </form>
                                                </span>
                                            }
                                        }
                                        else
                                        {
                                            <span>â€”</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
