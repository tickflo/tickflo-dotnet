@page "/workspaces/{slug}/users/invite"
@model Tickflo.Web.Pages.Workspaces.UsersInviteModel
@{
    ViewData["Title"] = "Invite User";
}
<div class="flex">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = "Invite User" })
        <form class="mt-4 max-w-xl" method="post">
            <div class="fieldset">
                <label class="fieldset-label">Email</label>
                <input class="input" asp-for="Email" />
            </div>
            <div class="fieldset">
                <label class="fieldset-label">Role</label>
                <select class="select" asp-for="Role"><option>Member</option><option>Admin</option></select>
            </div>
            <div class="mt-4 flex gap-2">
                <button type="submit" class="btn btn-primary">Send Invite</button>
                <a class="btn" asp-page="/Workspaces/Users" asp-route-slug="@Model.WorkspaceSlug">Cancel</a>
            </div>
        </form>
    </section>
</div>
