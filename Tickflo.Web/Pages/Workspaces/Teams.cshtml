@page "/workspaces/{slug}/users/teams"
@model Tickflo.Web.Pages.Workspaces.TeamsModel
@{
    ViewData["Title"] = "Teams";
}

<div class="flex flex-row gap-4">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="relative overflow-hidden p-6 flex-1 space-y-8 text-slate-100 rounded-3xl bg-gradient-to-br from-[#0c1220] via-[#0b101b] to-[#0a0f18]">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = "Teams", NewActionLabel = "New Team", NewActionHref = $"/workspaces/{Model.WorkspaceSlug}/users/teams/0/edit", AllowNewAction = Model.CanCreateTeams })

        <div class="card bg-base-100 shadow-sm rounded-3xl">
            <div class="card-body p-0">
                <div class="overflow-x-auto">
                    <table class="table table-zebra table-md">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th class="hidden sm:table-cell">Description</th>
                                <th class="hidden sm:table-cell">Members</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var team in Model.Teams)
                            {
                                var count = Model.MemberCounts.TryGetValue(team.Id, out var memberCount) ? memberCount : 0;
                                <tr>
                                    <td>@team.Name</td>
                                    <td class="hidden sm:table-cell">@team.Description</td>
                                    <td class="hidden sm:table-cell">@count</td>
                                    <td>
                                        <div class="join md:join">
                                            @if (Model.CanEditTeams) {
                                                <a class="btn btn-soft join-item btn-sm" asp-page="/Workspaces/TeamsEdit" asp-route-slug="@Model.WorkspaceSlug" asp-route-id="@team.Id">Edit</a>
                                                <a class="btn btn-soft join-item btn-sm" asp-page="/Workspaces/TeamsAssign" asp-route-slug="@Model.WorkspaceSlug" asp-route-teamId="@team.Id">Members</a>
                                            } else {
                                                <button class="btn btn-soft join-item btn-sm" disabled>Edit</button>
                                                <button class="btn btn-soft join-item btn-sm" disabled>Members</button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
