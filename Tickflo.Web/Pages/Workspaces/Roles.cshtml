@page "/workspaces/{slug}/users/roles"
@model Tickflo.Web.Pages.Workspaces.RolesModel
@{
    ViewData["Title"] = "Roles";
}

<div class="flex">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = "User Roles", NewActionLabel = "New Role", NewActionHref = $"/workspaces/{Model.WorkspaceSlug}/users/roles/new" })
        <h1 class="text-2xl font-bold">Roles</h1>
        @if (TempData["Error"] is string err && !string.IsNullOrWhiteSpace(err))
        {
            <div class="alert alert-error mt-3">
                <span>@err</span>
            </div>
        }
        <div class="card bg-base-100 shadow-sm">
            <div class="card-body">
                <h2 class="card-title">Roles</h2>
                <p class="text-sm text-base-content/70">Workspace: @Model.WorkspaceSlug</p>
            </div>
        </div>
        <div class="card bg-base-100 shadow-sm mt-4">
            <div class="card-body">
                <div class="overflow-x-auto">
                    <table class="table table-md">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Admin</th>
                                <th>Assigned Users</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Roles == null || !Model.Roles.Any())
                            {
                                <tr>
                                    <td colspan="3">
                                        <div class="alert alert-info">No roles yet.</div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var r in Model.Roles)
                                {
                                    <tr>
                                        <td>@r.Name</td>
                                        <td>@(r.Admin ? "Yes" : "No")</td>
                                        <td>@Model.RoleAssignmentCounts.GetValueOrDefault(r.Id)</td>
                                        <td>
                                            <div class="flex flex-wrap gap-2 md:join">
                                                <a class="btn btn-soft btn-xs btn-ghost md:join-item" href="/workspaces/@Model.WorkspaceSlug/users/roles/@r.Id/edit">Edit</a>
                                                <form method="post" action="/workspaces/@Model.WorkspaceSlug/users/roles/@r.Id/delete" onsubmit="return confirm('Delete role @r.Name?');">
                                                    <button class="btn btn-soft btn-xs btn-error md:join-item" type="submit" @(Model.RoleAssignmentCounts.GetValueOrDefault(r.Id) > 0 ? "disabled" : null)>Delete</button>
                                                </form>
                                                @if (Model.RoleAssignmentCounts.GetValueOrDefault(r.Id) > 0)
                                                {
                                                    <span class="text-xs text-base-content/70 ml-2">Unassign users before deleting.</span>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
