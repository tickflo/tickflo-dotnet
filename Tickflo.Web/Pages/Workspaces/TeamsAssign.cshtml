@page "/workspaces/{slug}/users/teams/{teamId:int}/members"
@model Tickflo.Web.Pages.Workspaces.TeamsAssignModel
@{
    ViewData["Title"] = "Team Members";
}

<div class="flex flex-row gap-4">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = $"Team: {Model.Team?.Name}" })

        <div class="card bg-base-100 shadow-sm mt-4 max-w-3xl">
            <div class="card-body">
                <h2 class="card-title">Members</h2>
                <form method="post" asp-page-handler="Add" class="grid gap-4 md:grid-cols-3 items-end">
                    <input type="hidden" asp-for="TeamId" />
                    <div class="form-control md:col-span-2">
                        <label class="label"><span class="label-text">User</span></label>
                        <select asp-for="SelectedUserId" class="select select-bordered w-full">
                            <option value="">Select a user</option>
                            @foreach (var u in Model.WorkspaceUsers)
                            {
                                <option value="@u.Id">@u.Name (@u.Email)</option>
                            }
                        </select>
                    </div>
                    <div class="join md:join">
                        <button type="submit" class="btn btn-primary join-item w-full md:w-auto" @(Model.CanEditTeams ? "" : "disabled")>Add</button>
                        <a class="btn btn-ghost join-item" asp-page="/Workspaces/Teams" asp-route-slug="@Model.WorkspaceSlug" asp-preserve-query>Back</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card bg-base-100 shadow-sm mt-8">
            <div class="card-body p-0">
                <div class="overflow-x-auto">
                    <table class="table table-md">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.Members)
                            {
                                <tr>
                                    <td>@m.Name (@m.Email)</td>
                                    <td>
                                        <form method="post" asp-page-handler="Remove" class="inline">
                                            <input type="hidden" name="teamId" value="@Model.TeamId" />
                                            <input type="hidden" name="userId" value="@m.Id" />
                                            <button type="submit" class="btn btn-error btn-xs" @(Model.CanEditTeams ? "" : "disabled")>Remove</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
