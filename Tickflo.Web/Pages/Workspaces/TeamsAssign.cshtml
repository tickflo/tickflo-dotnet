@page "/workspaces/{slug}/users/teams/{teamId:int}/members"
@model Tickflo.Web.Pages.Workspaces.TeamsAssignModel
@{
    ViewData["Title"] = "Team Members";
}

<div class="flex flex-row gap-4">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="relative overflow-hidden p-6 flex-1 space-y-8 text-slate-100 rounded-3xl bg-gradient-to-br from-[#0c1220] via-[#0b101b] to-[#0a0f18]">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = $"Team: {Model.Team?.Name}" })

        <div class="card bg-neutral-900/85 backdrop-blur shadow-2xl rounded-3xl text-slate-100 max-w-3xl">
            <div class="card-body">
                <h2 class="card-title">Members</h2>
                <form method="post" asp-page-handler="Add" class="space-y-4">
                    <input type="hidden" asp-for="TeamId" />
                    <div class="form-control">
                        <label class="label"><span class="label-text">User</span></label>
                        <select asp-for="SelectedUserId" class="select select-bordered w-full bg-neutral-900/80 border border-white/10 text-slate-100">
                            <option value="">Select a user</option>
                            @foreach (var user in Model.WorkspaceUsers)
                            {
                                <option value="@user.Id">@user.Name (@user.Email)</option>
                            }
                        </select>
                    </div>
                    <div class="flex gap-2 justify-end">
                        <button type="submit" class="btn btn-primary rounded-2xl" @(Model.CanEditTeams ? "" : "disabled")>Add</button>
                        <a class="btn btn-ghost rounded-2xl" asp-page="/Workspaces/Teams" asp-route-slug="@Model.WorkspaceSlug" asp-preserve-query>Back</a>
                    </div>
                </form>
            </div>
        </div>

        <div class="card bg-base-100 shadow-sm rounded-3xl mt-8 rounded-3xl">
            <div class="card-body p-0">
                <div class="overflow-x-auto">
                    <table class="table table-sm table-zebra">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in Model.Members)
                            {
                                <tr>
                                    <td>@member.Name (@member.Email)</td>
                                    <td>
                                        <form method="post" asp-page-handler="Remove" class="inline">
                                            <input type="hidden" name="teamId" value="@Model.TeamId" />
                                            <input type="hidden" name="userId" value="@member.Id" />
                                            <button type="submit" class="btn btn-error btn-sm" @(Model.CanEditTeams ? "" : "disabled")>Remove</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
