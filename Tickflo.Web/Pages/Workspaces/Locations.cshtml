@page "/workspaces/{slug}/locations"
@model Tickflo.Web.Pages.Workspaces.LocationsModel
@{
    ViewData["Title"] = "Locations";
}

<div class="flex flex-row gap-4">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = "Locations", NewActionLabel = "New Location", NewActionHref = $"/workspaces/{Model.WorkspaceSlug}/locations/0/edit", AllowNewAction = Model.CanCreateLocations })
        @if (TempData["Success"] is string s1 && !string.IsNullOrWhiteSpace(s1))
        {
            <div class="alert alert-success my-4">@s1</div>
        }
        <div class="card bg-base-100 shadow-sm rounded-3xl">
            <div class="card-body">
                <h2 class="card-title">Locations</h2>
                <p class="text-sm text-base-content/70">Workspace: @Model.WorkspaceSlug</p>
            </div>
        </div>
        <div class="card bg-base-100 shadow-sm rounded-3xl mt-4 rounded-3xl">
            <div class="card-body">
                <div class="overflow-x-auto rounded-box bg-base-100">
                    <table class="table table-zebra table-md">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th class="hidden sm:table-cell">Address</th>
                                <th>Status</th>
                                <th class="hidden sm:table-cell">Contacts</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Locations == null || !Model.Locations.Any())
                            {
                                <tr>
                                    <td colspan="4">
                                        <div class="alert alert-info">No locations yet.</div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var loc in Model.Locations)
                                {
                                    <tr>
                                        <td class="break-all"><span title="@loc.ContactPreview">@loc.Name</span></td>
                                        <td class="hidden sm:table-cell break-all">@loc.Address</td>
                                        <td><span class="badge badge-soft rounded-full">@(loc.Active ? "Active" : "Inactive")</span></td>
                                        <td class="hidden sm:table-cell"><span class="badge badge-soft rounded-full">@loc.ContactCount</span></td>
                                        <td>
                                            <div class="flex flex-wrap gap-2 md:join">
                                                @if (Model.CanEditLocations) {
                                                    <a class="btn btn-ghost btn-xs md:join-item" asp-page="/Workspaces/LocationsEdit" asp-route-slug="@Model.WorkspaceSlug" asp-route-locationId="@loc.Id">Edit</a>
                                                    <a class="btn btn-primary btn-xs md:join-item" asp-page="/Workspaces/TicketsDetails" asp-route-slug="@Model.WorkspaceSlug" asp-route-id="0" asp-route-locationId="@loc.Id">New Ticket</a>
                                                    <form method="post" asp-page-handler="Delete" asp-route-slug="@Model.WorkspaceSlug" asp-route-locationId="@loc.Id">
                                                        <button class="btn btn-error btn-xs md:join-item" type="submit">Delete</button>
                                                    </form>
                                                } else {
                                                    <button class="btn btn-ghost btn-xs md:join-item" disabled>Edit</button>
                                                    <button class="btn btn-primary btn-xs md:join-item" disabled>New Ticket</button>
                                                    <button class="btn btn-error btn-xs md:join-item" disabled>Delete</button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
