@page "/workspaces/{slug}/contacts"
@model Tickflo.Web.Pages.Workspaces.ContactsModel
@{
    ViewData["Title"] = "Contacts";
}

<div class="flex flex-row gap-4">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = "Contacts", NewActionLabel = "New Contact", NewActionHref = $"/workspaces/{Model.WorkspaceSlug}/contacts/0/edit", AllowNewAction = Model.CanCreateContacts })
        <div class="card bg-base-100 shadow-sm rounded-3xl">
            <div class="card-body">
                <div class="flex items-center justify-between">
                    <div>
                        <h2 class="card-title">Contacts</h2>
                        <p class="text-sm text-base-content/70">Workspace: @Model.WorkspaceSlug</p>
                    </div>
                    @await Html.PartialAsync("_FilterBar", new Tickflo.Web.Pages.Shared.FilterBarView {
                        QueryParamName = "Query",
                        QueryValue = Model.Query,
                        Placeholder = "Search contacts by name or email",
                        SubmitLabel = "Filter",
                        Selects = new List<Tickflo.Web.Pages.Shared.FilterSelect> {
                            new Tickflo.Web.Pages.Shared.FilterSelect {
                                Name = "Priority",
                                Options = Model.Priorities.Select(p => new Tickflo.Web.Pages.Shared.FilterOption {
                                    Value = p.Name ?? string.Empty,
                                    Label = p.Name ?? "",
                                    Selected = string.Equals(Model.Priority ?? string.Empty, p.Name ?? string.Empty, System.StringComparison.OrdinalIgnoreCase)
                                }).Prepend(new Tickflo.Web.Pages.Shared.FilterOption { Value = "", Label = "All Priorities", Selected = string.IsNullOrEmpty(Model.Priority) }).ToList()
                            }
                        }
                    })
                </div>
            </div>
        </div>
        <div class="card bg-base-100 shadow-sm rounded-3xl mt-4">
            <div class="card-body">
                <div class="overflow-x-auto rounded-box bg-base-100">
                    <table class="table table-zebra table-md">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Contact</th>
                                <th class="hidden sm:table-cell">Flags</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Contacts == null || !Model.Contacts.Any())
                            {
                                <tr>
                                    <td colspan="4">
                                        <div class="alert alert-info">No contacts yet.</div>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                foreach (var c in Model.Contacts)
                                {
                                    <tr>
                                        <td>
                                            <div class="font-medium">@c.Name</div>
                                            <div class="text-xs text-base-content/70">@c.Company</div>
                                        </td>
                                        <td>
                                            <div class="break-all">@c.Email</div>
                                            @if (!string.IsNullOrWhiteSpace(c.Phone))
                                            {
                                                <div class="text-xs text-base-content/70 break-all">@c.Phone</div>
                                            }
                                        </td>
                                        <td class="hidden sm:table-cell">
                                            <div class="flex flex-wrap gap-1">
                                                @if (!string.IsNullOrWhiteSpace(c.Priority)) {
                                                    var pcolor = Model.PriorityColorByName.TryGetValue(c.Priority, out var pc) ? pc : "neutral";
                                                    var pIsHex = pcolor.StartsWith("#");
                                                    var pCls = pIsHex ? "badge" : $"badge badge-soft badge-{pcolor}";
                                                    var pStyle = pIsHex ? $"background-color: {pcolor}; color: #fff;" : null;
                                                    <span class="@pCls" style="@pStyle">@c.Priority</span>
                                                }
                                                @if (!string.IsNullOrWhiteSpace(c.PreferredChannel)) { <span class="badge badge-soft rounded-full">@c.PreferredChannel</span> }
                                                @if (!string.IsNullOrWhiteSpace(c.Status)) { <span class="badge badge-soft rounded-full">@c.Status</span> }
                                            </div>
                                        </td>
                                        <td>
                                            <div class="flex flex-wrap gap-2 md:join">
                                                @if (Model.CanEditContacts) {
                                                    <a class="btn btn-ghost btn-xs md:join-item" asp-page="/Workspaces/ContactsEdit" asp-route-slug="@Model.WorkspaceSlug" asp-route-id="@c.Id">Edit</a>
                                                } else {
                                                    <button class="btn btn-ghost btn-xs md:join-item" disabled>Edit</button>
                                                }
                                                <a class="btn btn-primary btn-xs md:join-item" href="/workspaces/@Model.WorkspaceSlug/tickets/0?contactId=@c.Id">New Ticket</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
</div>
