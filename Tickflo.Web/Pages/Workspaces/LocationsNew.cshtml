@page "/workspaces/{slug}/locations/new"
@model Tickflo.Web.Pages.Workspaces.LocationsNewModel
@{
    ViewData["Title"] = "New Location";
}
<div class="flex">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = "New Location" })
        <div class="card bg-base-100 shadow-sm mt-4 max-w-xl">
            <div class="card-body">
                <form method="post">
                    <div class="fieldset">
                        <label class="label" for="Name"><span class="label-text">Name</span></label>
                        <input class="input validator" asp-for="Name" />
                        <span asp-validation-for="Name" class="validator-hint"></span>
                    </div>
                    <div class="fieldset">
                        <label class="label" for="Address"><span class="label-text">Address</span></label>
                        <input class="input validator" asp-for="Address" />
                        <span asp-validation-for="Address" class="validator-hint"></span>
                    </div>
                    <div class="card-actions flex flex-wrap gap-2 md:join">
                        <button type="submit" class="btn btn-soft btn-primary md:join-item">Save</button>
                        <a class="btn btn-soft btn-ghost md:join-item" asp-page="/Workspaces/Locations" asp-route-slug="@Model.WorkspaceSlug">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
