@page "/workspaces/{slug}/users"
@model Tickflo.Web.Pages.Workspaces.UsersModel
@{
    ViewData["Title"] = "Users";
}

<div class="flex">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = "Users", NewActionLabel = "Invite User", NewActionHref = $"/workspaces/{Model.WorkspaceSlug}/users/invite" })
        <h1 class="text-2xl font-bold">Users</h1>
        <p class="mt-2 text-sm text-muted">Workspace: @Model.WorkspaceSlug</p>
        <div class="mt-4">
            <p>Users page placeholder. Invitations and roles go here.</p>
        </div>
    </section>
</div>
