@page "/workspaces/{slug}/users"
@model Tickflo.Web.Pages.Workspaces.UsersModel
@{
    ViewData["Title"] = "Users";
}

<div class="flex">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = "Users", NewActionLabel = "Invite User", NewActionHref = $"/workspaces/{Model.WorkspaceSlug}/users/invite", AllowNewAction = Model.IsWorkspaceAdmin })
        <div class="card bg-base-100 shadow-sm">
            <div class="card-body">
                <h2 class="card-title">Users</h2>
                <p class="text-sm text-base-content/70">Workspace: @Model.WorkspaceSlug</p>
            </div>
        </div>
        <div class="card bg-base-100 shadow-sm mt-4">
            <div class="card-body">
                <h2 class="card-title">Pending Invites</h2>
            @if (!Model.PendingInvites.Any())
            {
                <div class="alert alert-info">No pending invites.</div>
            }
            else
            {
                <div class="overflow-x-auto mt-2">
                <table class="table table-md">
                    <thead>
                        <tr>
                            <th>Email</th>
                            <th>Invited</th>
                            <th>Roles</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var inv in Model.PendingInvites)
                    {
                        <tr>
                            <td>@inv.Email</td>
                            <td>@inv.CreatedAt.ToString("u")</td>
                            <td>@(inv.Roles != null && inv.Roles.Any() ? string.Join(", ", inv.Roles) : "â€”")</td>
                            <td>
                                <div class="flex flex-wrap gap-2 md:join">
                                <form method="post" asp-page-handler="Accept" asp-route-slug="@Model.WorkspaceSlug" asp-route-userId="@inv.UserId">
                                    <button class="btn btn-soft btn-xs btn-primary md:join-item" type="submit">Accept</button>
                                </form>
                                <form method="post" asp-page-handler="Resend" asp-route-slug="@Model.WorkspaceSlug" asp-route-userId="@inv.UserId">
                                    <button class="btn btn-soft btn-xs btn-ghost md:join-item" type="submit">Resend</button>
                                </form>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
                </div>
            }
        </div>
    </section>
</div>
