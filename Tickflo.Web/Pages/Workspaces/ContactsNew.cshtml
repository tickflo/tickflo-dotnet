@page "/workspaces/{slug}/contacts/new"
@model Tickflo.Web.Pages.Workspaces.ContactsNewModel
@{
    ViewData["Title"] = "New Contact";
}
<div class="flex flex-row gap-4">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = "New Contact" })
        <form class="mt-4 max-w-xl" method="post">
            <div class="fieldset">
                <label class="label"><span class="label-text">Name</span></label>
                <input class="input validator w-full" asp-for="Name" />
                <span class="validator-hint" asp-validation-for="Name"></span>
            </div>
            <div class="fieldset">
                <label class="label"><span class="label-text">Email</span></label>
                <input class="input validator w-full" asp-for="Email" />
                <span class="validator-hint" asp-validation-for="Email"></span>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
                <div class="fieldset">
                    <label class="label"><span class="label-text">Phone</span></label>
                    <input class="input w-full" asp-for="Phone" />
                </div>
                <div class="fieldset">
                    <label class="label"><span class="label-text">Company</span></label>
                    <input class="input w-full" asp-for="Company" />
                </div>
                <div class="fieldset">
                    <label class="label"><span class="label-text">Title</span></label>
                    <input class="input w-full" asp-for="Title" />
                </div>
                <div class="fieldset">
                    <label class="label"><span class="label-text">Preferred Channel</span></label>
                    <select class="select w-full" asp-for="PreferredChannel">
                        <option>Email</option>
                        <option>Phone</option>
                        <option>Chat</option>
                    </select>
                </div>
                <div class="fieldset">
                    <label class="label"><span class="label-text">Priority</span></label>
                    <select class="select w-full" asp-for="Priority">
                        <option>Low</option>
                        <option>Normal</option>
                        <option>High</option>
                        <option>Urgent</option>
                    </select>
                </div>
                <div class="md:col-span-2 fieldset">
                    <label class="label"><span class="label-text">Tags</span></label>
                    <input class="input w-full" asp-for="Tags" placeholder="comma,separated,tags" />
                </div>
                <div class="md:col-span-2 fieldset">
                    <label class="label"><span class="label-text">Notes</span></label>
                    <textarea class="textarea w-full" asp-for="Notes"></textarea>
                </div>
            </div>
            <div class="mt-4 flex flex-wrap gap-2 md:join">
                <button type="submit" class="btn btn-primary md:join-item w-full md:w-auto">Create Contact</button>
                <a class="btn md:join-item" href="/workspaces/@Model.WorkspaceSlug/contacts" asp-preserve-query>Cancel</a>
            </div>
        </form>
    </section>
</div>
