@page "/workspaces/{slug}/reports/new"
@model Tickflo.Web.Pages.Workspaces.ReportsNewModel
@{
    ViewData["Title"] = "New Report";
}
<div class="flex">
    @await Html.PartialAsync("_WorkspaceSidebar", Model.WorkspaceSlug)
    <section class="p-6 flex-1">
        @await Html.PartialAsync("_WorkspaceHeader", new Tickflo.Web.Pages.Shared.WorkspaceHeaderView { Slug = Model.WorkspaceSlug, Name = Model.Workspace?.Name ?? "Workspace", SectionTitle = "New Report" })
        <div class="card bg-base-100 shadow-sm mt-4 max-w-xl">
            <div class="card-body">
                <form method="post">
                    <div class="fieldset">
                        <label class="label" for="Report_Title"><span class="label-text">Title</span></label>
                        <input class="input validator" asp-for="Title" />
                        <span asp-validation-for="Title" class="validator-hint"></span>
                    </div>
                    <div class="fieldset">
                        <label class="label" for="Report_Type"><span class="label-text">Type</span></label>
                        <select class="select validator" asp-for="Type">
                            <option>Summary</option>
                            <option>Detailed</option>
                        </select>
                        <span asp-validation-for="Type" class="validator-hint"></span>
                    </div>
                    <div class="card-actions">
                        <button type="submit" class="btn btn-soft btn-primary">Create Report</button>
                        <a class="btn btn-soft btn-ghost" asp-page="/Workspaces/Reports" asp-route-slug="@Model.WorkspaceSlug">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
