@using Tickflo.Core.Entities
@model Tickflo.Web.Pages.Shared.WorkspaceHeaderView
<header class="px-6 py-4 border-b border-base-300 bg-base-100">
    <div class="flex flex-col gap-3 md:flex-row md:items-center md:justify-between">
     
        <div class="flex flex-wrap gap-2 justify-end md:ml-auto md:join">
            @if (Model.AllowNewAction && !string.IsNullOrEmpty(Model.NewActionHref) && !string.IsNullOrEmpty(Model.NewActionLabel))
            {
                <a class="btn btn-sm btn-primary md:join-item" href="@Model.NewActionHref"><i class="fa fa-plus"></i> @Model.NewActionLabel</a>
            }
            <a class="btn btn-ghost btn-sm md:join-item" asp-page="/Workspace" asp-route-slug="@Model.Slug"><i class="fa fa-house"></i> Dashboard</a>
            <a class="btn btn-ghost btn-sm md:join-item" asp-page="/Workspaces/Settings" asp-route-slug="@Model.Slug"><i class="fa fa-cog"></i> Settings</a>
        </div>
    </div>
</header>
