@page
@model NotificationsModel
@{
    ViewData["Title"] = "Notifications";
}

<div class="max-w-2xl">
    <div class="flex items-center justify-between mb-6">
        <h1 class="text-3xl font-bold">Notifications</h1>
        @if (Model.Notifications.Any(n => n.ReadAt == null))
        {
            <form method="post" asp-page-handler="MarkAllAsRead" class="inline">
                <button type="submit" class="btn btn-sm btn-outline">
                    Mark all as read
                </button>
            </form>
        }
    </div>

    @if (!Model.Notifications.Any())
    {
        <div class="alert alert-info">
            <i class="fa fa-info-circle mr-2"></i>
            <span>You have no notifications</span>
        </div>
    }
    else
    {
        <div class="space-y-2">
            @foreach (var notification in Model.Notifications)
            {
                var ticketData = Model.GetTicketData(notification);
                <div class="card bg-base-100 shadow-sm @(notification.ReadAt != null ? "opacity-60" : "")">
                    <div class="card-body p-4">
                        <div class="flex items-start justify-between gap-4">
                            <div class="flex-1">
                                <h3 class="font-semibold text-sm">@notification.Subject</h3>
                                <div class="text-sm text-base-content/70 mt-1">@Html.Raw(notification.Body)</div>
                                <div class="flex items-center gap-2 mt-3">
                                    <span class="badge badge-sm badge-outline">@notification.Type</span>
                                    <span class="text-xs text-base-content/50">
                                        @notification.CreatedAt.ToString("g")
                                    </span>
                                    @if (ticketData != null)
                                    {
                                        <a href="/workspaces/@ticketData.WorkspaceSlug/tickets/@ticketData.TicketId"
                                            class="btn btn-xs btn-primary gap-1">
                                            <i class="fa fa-eye"></i>
                                            View Ticket
                                        </a>
                                    }
                                </div>
                            </div>
                            @if (notification.ReadAt == null)
                            {
                                <form method="post" asp-page-handler="MarkAsRead" asp-route-id="@notification.Id" class="inline">
                                    <button type="submit" class="btn btn-xs btn-ghost">
                                        <i class="fa fa-check"></i>
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
