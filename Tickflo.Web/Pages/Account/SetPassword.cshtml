@page "/account/set-password"
@model Tickflo.Web.Pages.Account.SetPasswordModel
@{
    ViewData["Title"] = "Set Password";
}

<div class="flex">
    @await Html.PartialAsync("_AppSidebar")
    <section class="p-6 flex-1">
        <div class="card w-full max-w-md bg-base-100 shadow-2xl">
            <div class="card-body">
                <h1 class="card-title">Set Your Password</h1>

                @if (!string.IsNullOrEmpty(Model.Error))
                {
                    @await Html.PartialAsync("_ErrorAlert", Model.Error)
                }

                <form method="post">
                    <input type="hidden" asp-for="Token" />
                    <div class="form-control">
                        <label class="label"><span class="label-text">Password</span></label>
                        <input asp-for="Password" type="password" class="input input-bordered validator" />
                        <span asp-validation-for="Password" class="validator-hint"></span>
                    </div>
                    <div class="form-control mt-2">
                        <label class="label"><span class="label-text">Confirm Password</span></label>
                        <input asp-for="ConfirmPassword" type="password" class="input input-bordered validator" />
                        <span asp-validation-for="ConfirmPassword" class="validator-hint"></span>
                    </div>
                    <div class="join mt-4">
                        <button type="submit" class="btn btn-primary join-item w-full md:w-auto">Save Password</button>
                        <a href="/login" class="btn btn-soft join-item">Cancel</a>
                    </div>
                </form>
            </div>
        </div>

    </section>
</div>

<partial name="_ValidationScriptsPartial" />
